{
    "name": "RoahmLab Kinova Development Container",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "-it",
        "--network=host",
        "--name=Kinova_control_container",
        "--device=/dev/ttyACM0"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "ms-iot.vscode-ros",
        "twxs.cmake", 
    ],
    // "forwardPorts": [5000, 8000], 
}
